{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2017",
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./typings/", "./node_modules/@types", "./node_modules"],
    "types": ["sass"]
  },
  "include": [
    ".eslintrc.cjs",
    "node_modules/@types",
    "src/**/*.ts",
    "src/**/*.tsx",
    "common/**/*.ts",
    "common/**/*.tsx",
    "mach.config.js"
  ],
  "exclude": ["node_modules"]
}
